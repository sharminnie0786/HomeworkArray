//The Question is:
//Sample Input
//4
//1 4 3 2
//Sample Output
//2 3 4 1
//Input Format
//The first line of the input contains ,where  is the number of integers.The next line contains  integers separated by a space.
//Output Format
//Print the  integers of the array in the reverse order in a single line separated by a space.

#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int temp = 0;
    int arr[n];
    int n;
    
    cin << n;
    
    for (int i = 0; i < n; i++) {
        cin >> arr[n];
    }
    
    temp = arr[0];
    arr[0] = arr[1];
    arr[1] = arr[2];
    arr[2] = arr[3];
    arr[3] = temp;
    
    cout << endl;
    for (int i = 0; i < n; i++) {
    cout << arr[i] << " ";
    }
    
    return 0;
}
// As I haven't taught you how to declare an array dynamically, we'll go with the assumption that we know the array size beforehand

#include <stdio.h>
#include "iostream"
#include "fstream"
#include "ctime"

using namespace std;

int main(){
    srand(time(0));
    int size = 5,arr[5];
    cout << " Now we are going to populate the array with random values" << endl;
    for (int i = 0; i<size; i++) {
        arr[i] = rand()%100;
        cout << arr[i] << " ";
    }
    cout << endl << "Now comes the output part " << endl;
    for (int i = size-1; i>=0; i--) {
        cout << arr[i] << " ";
    }
    return 0;
}



// Here I am actually reversing the contents of the array ! 

#include <stdio.h>
#include "iostream"
#include "fstream"
#include "ctime"

using namespace std;

int main(){
    srand(time(0));
    int size = 6,arr[6],temp;
    cout << " Now we are going to populate the array with random values" << endl;
    for (int i = 0; i<size; i++) {
        arr[i] = rand()%100;
        cout << arr[i] << " ";
    }
    cout << endl << "Now I am actually going to reverse the contents of the array " << endl;
    for (int i = 0,j=size-1;i!=j && i < j; i++,j--) {
        temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
    cout << "The contents of the array now are : " << endl;
    for (int i = 0; i<size; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}
